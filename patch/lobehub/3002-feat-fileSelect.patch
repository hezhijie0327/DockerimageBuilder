+'use client';
+
+import { createModal, useModalContext } from '@lobehub/ui';
+import { memo, useState } from 'react';
+
+import { useFileStore } from '@/store/file';
+
+const AttachResourceModalContent = memo(() => {
+  const { close } = useModalContext();
+  const [selectedFileIds, setSelectedFileIds] = useState<Set<string>>(new Set());
+  const resourceList = useFileStore((s) => s.resourceList);
+  const dispatchChatUploadFileList = useFileStore((s) => s.dispatchChatUploadFileList);
+
+  const handleToggleSelection = (id: string) => {
+    const newSelected = new Set(selectedFileIds);
+    if (newSelected.has(id)) {
+      newSelected.delete(id);
+    } else {
+      newSelected.add(id);
+    }
+    setSelectedFileIds(newSelected);
+  };
+
+  const handleConfirm = () => {
+    if (selectedFileIds.size === 0) {
+      close();
+      return;
+    }
+
+    selectedFileIds.forEach((fileId) => {
+      const resource = resourceList.find((r) => r.id === fileId);
+      if (resource?.url && resource.sourceType === 'file') {
+        dispatchChatUploadFileList({
+          files: [
+            {
+              base64Url: undefined,
+              file: new File([], resource.name, { type: resource.fileType }),
+              fileUrl: resource.url,
+              id: resource.id,
+              previewUrl: resource.url,
+              status: 'success',
+              uploadState: { progress: 100, restTime: 0, speed: 0 },
+            },
+          ],
+          type: 'addFiles',
+        });
+      }
+    });
+
+    close();
+  };
+
+  return (
+    <div style={{ height: '100%', padding: 16, display: 'flex', flexDirection: 'column' }}>
+      <div style={{ flex: 1, overflow: 'auto' }}>
+        {resourceList.map((resource) => (
+          <div
+            key={resource.id}
+            style={{
+              padding: 12,
+              marginBottom: 8,
+              border: '1px solid var(--colorBorder)',
+              borderRadius: 6,
+              cursor: 'pointer',
+              backgroundColor: selectedFileIds.has(resource.id)
+                ? 'var(--colorPrimaryBg)'
+                : 'transparent',
+            }}
+            onClick={() => handleToggleSelection(resource.id)}
+          >
+            <input readOnly checked={selectedFileIds.has(resource.id)} type="checkbox" />
+            <span style={{ marginLeft: 8 }}>{resource.name}</span>
+          </div>
+        ))}
+      </div>
+
+      {selectedFileIds.size > 0 && (
+        <div style={{ paddingTop: 16, borderTop: '1px solid var(--colorBorder)' }}>
+          <button
+            style={{
+              padding: '8px 16px',
+              backgroundColor: 'var(--colorPrimary)',
+              color: 'white',
+              border: 'none',
+              borderRadius: 6,
+              cursor: 'pointer',
+            }}
+            onClick={handleConfirm}
+          >
+            Confirm ({selectedFileIds.size})
+          </button>
+        </div>
+      )}
+    </div>
+  );
+});
+
+AttachResourceModalContent.displayName = 'AttachResourceModalContent';
+
+export const createAttachResourceModal = () =>
+  createModal({
+    allowFullscreen: true,
+    children: <AttachResourceModalContent />,
+    destroyOnHidden: false,
+    footer: null,
+    styles: { body: { overflow: 'hidden', padding: 0 } },
+    title: 'Select from Resources',
+    width: 'min(90%, 1200px)',
+  });
