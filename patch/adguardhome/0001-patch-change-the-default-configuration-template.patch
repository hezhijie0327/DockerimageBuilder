diff --git a/internal/dhcpd/dhcpd.go b/internal/dhcpd/dhcpd.go
index 69082c0..93eff7f 100644
--- a/internal/dhcpd/dhcpd.go
+++ b/internal/dhcpd/dhcpd.go
@@ -16,7 +16,7 @@ import (

